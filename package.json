{
  "name": "broz",
  "version": "1.0.1",
  "packageManager": "pnpm@10.14.0",
  "description": "A simple, frameless browser for screenshots",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "homepage": "https://github.com/antfu/broz",
  "repository": {
    "type": "git",
    "url": "https://github.com/antfu/broz"
  },
  "bugs": "https://github.com/antfu/broz/issues",
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "broz": "./bin/broz.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "dev": "NODE_OPTIONS=\"--import tsx\" electron ./src/index.ts",
    "build": "tsdown",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "release": "bumpp",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "electron": "^37.2.5",
    "electron-window-state": "^5.0.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@types/node": "^24.10.0",
    "bumpp": "^10.2.2",
    "eslint": "^9.32.0",
    "lint-staged": "^16.2.6",
    "simple-git-hooks": "^2.13.1",
    "taze": "^19.9.0",
    "tsdown": "^0.15.12",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^4.0.6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
